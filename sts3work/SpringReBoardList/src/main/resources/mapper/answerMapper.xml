<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.answerdata.AnswerDao">


	<insert id="insertOfAnswer" parameterType="adto">
		insert into reboardanswer values(null, #{num}, #{pass},#{content},now(), #{nickname})
	</insert>
	
	<select id="selectOfAnswer" parameterType="int" resultType="adto">
		select * from reboardanswer where num=#{num} order by idx desc
	</select>
	
	<select id="CheckPassAnswer" resultType="int" parameterType="HashMap">
		select count(*) from reboardanswer where idx=#{idx} and pass=#{pass}
	</select>
	
	<delete id="deleteAnswer">
		delete from reboardanswer where idx=#{idx}
	</delete>
</mapper>