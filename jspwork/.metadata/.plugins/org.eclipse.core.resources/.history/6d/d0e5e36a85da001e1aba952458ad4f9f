<body>
	<button type="button" class="btn btn-outline-success" id="btn">food데이터
		가져오기</button>
	<br>
	<br>
	<div id="result"></div>

	<script type="text/javascript">
		$("#btn").click(function() {

			$.ajax({
				type : "get",
				url : "foodtoxml.jsp",
				dataType : "xml",
				success : function(data) {
					var s = "번호 : " + $(data).find("num").text() + "<br>";
					s += "음식명: " + $(data).find("foodname").text() + "<br>";
					s += $(data).find("foodphoto").text() + "<br>";
					s += "가격: " + $(data).find("price").text() + "<br>";
					s += "갯수: " + $(data).find("cnt").text() + "<br>";

					$("#result").html(s);
				}

			})
		});
	</script>
</body>
