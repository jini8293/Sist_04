<style type="text/css">
div.hello {
	position: absolute;
	border: 1px solid gray;
	font-family: Gowun Dodum;
	font-size: 1.5em;
}

div.hlist {
	position: absolute;
	font-family: Gowun Dodum;
	font-size: 15pt;
}

div.button {
	left: 50px;
	top: 70px;
	width: 500px;
	height: 110px;
	line-height: 100px;
	text-align: center;
}

div.addform {
	left: 50px;
	top: 200px;
	width: 500px;
	height: 450px;
	padding: 20px 20px;
}

img.avata {
	cursor: pointer;
}

img.select {
	border: 2px solid green;
}

div.list {
	left: 600px;
	top: 30px;
	width: 600px;
	height: 800px;
	padding: 20px 20px;
	font-family: Gowun Dodum;
}
</style>

<script type="text/javascript">
	$(function() {

		list();

		$("div.addform").hide();

		$("#btnadd").click(function() {
			$("div.addform").slideToggle('slow');
		})

		$("img.avata").eq(2).addClass("select");

		$("#avata").val($("img.avata").eq(2).attr("src"))

		//아바타선택시  값 변경
		$("img.avata").click(function() {
			$("img.avata").removeClass("select");
			$(this).addClass("select");
			$("#avata").val($(this).attr("src"));
		})

		//추가 폼 저장
		$("#dbsave").click(function() {
			var data = $("#addfrm").serialize();

			$.ajax({
				type : "post",
				dataType : "html",
				url : "worldInsert.jsp",
				data : data,
				success : function() {
					//입력값 초기화
					$("#writer").val("");
					$("#content").val("");

					//아바타 초기화
					$("img.avata").eq(2).addClass("select");
					$("#avata").val($("img.avata").eq(2).attr("src"));
					$("img.avata").removeClass("select");

				}
			});
		});
	});

	//사용자 함수 list
	function list() {

		$.ajax({

			type : "get",
			dataType : "json",
			url : "worldList.jsp",
			success : function(res) {
				
				
				
				//alert(res.length);
				var s = "<table class='table table-bordered' style='width:800px;'> ";
					s+="<caption align='top' ><b>방명록 리스트</b></caption>";
					s+="<tr class='table-success' >";
					s+="<th>No.</th>";
					s+="<th>작성자</th>";
					s+="<th>남기는 말</th>"
					s+="<th>아바타</th>"
					s+="<th>작성일</th>"
					s+="</tr>";
					
					if(res.length==0){
						s+="<h3 class='alert alert-info'>저장된 방명록이 없습니다</h3>";
					}
				$.each(res,function(i,ele){
					s+="<tr align='center' valign='middle'>";
					s+="<td>"+ele.num+"</td>";
					s+="<td>"+ele.writer+"</td>";
					s+="<td><pre style='font-family:Gowun Dodum;'>"+ele.content+"</pre></td>";
					s+="<td><img src='"+ele.avata+"' width='100'></td>";
					s+="<td>"+ele.writeday+"</td>";
				});
				s+="</table>"
				$("div.list").html(s);
			}

		});

	}
</script>
</head>
