	<div style="margin: 30px 50px;">
		<b>음식사진선택:</b>
		<select id="selImage">
			<option value="1">샌드위치</option>
			<option value="2">닭꼬치</option>
			<option value="7">에그인헬</option>
			<option value="11">망고빙수</option>
			<option value="6">계란볶음밥</option>
		</select>
		<br><br>
		<input type="text" id="likeScore1">
		<input type="text" id="likeScore2">
		<input type="text" id="likeScore3">
		
		<button type="button" id="btn1">데이터 전송</button>
		<br><br>
		<div id="result"></div>
	</div>
	
	<script type="text/javascript">
		$("#btn1").click(function() {
		
			var fimage = $("#selImage").val();
			var fname = $("#selImage option:selected").text();
			
			var l1=$("#likeScore1").val();
			var l2=$("#likeScore2").val();
			var l3=$("#likeScore3").val();
			
			var s = "fimage="+fimage+"&"+"fname="+fname+"&"+"l1="+l1+"&"+"l2="+l2+"&"+"l3="+l3;
			/* alert(s); */
			
			$.ajax({
				type:"get",
				url:"formDataReceive.jsp",
				dataType:"json",
				data:s,
				success : function(data) {
					var s = "";
			
						s+="<div style='width:300px; font-family:Gowun Dodum;'>";
						s+="<img src='../image/food/"+data.fimage+"' style='width:200px;'>";
						s+="음식명 : "+data.fname;
						s+="총점 : "+data.tot;
						s+="평균 : "+data.avg;
						s+="</div>"
				
					$("#result").html(s);
				}
			})
			
			
			
		})
		
	</script>

