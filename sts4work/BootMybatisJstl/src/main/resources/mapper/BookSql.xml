<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.BookMapperInter">

	<select id="getTotalCount" resultType="int">
		select count(*) from book
	</select>
	
	<select id="getAllDatas" parameterType="bdto">
		select * from book order by num desc
	</select>
	
	<insert id="insertBook" parameterType="bdto">
		insert into book values(null, #{bookname}, #{writer}, #{bookprice}, #{bookimage}, #{bookcompany},now())
	</insert>
	
</mapper>