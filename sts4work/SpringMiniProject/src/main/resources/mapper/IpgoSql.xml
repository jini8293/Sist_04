<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.data.mapper.IpgoMapperInter">

	<select id="getTotalCount" resultType="int">
		select count(*) from ipgo
	</select>
	
	<insert id="insertIpgo" parameterType="idto">
		insert into ipgo values(null, #{sangpum}, #{price}, #{photoname},now())
	</insert>
	
	<select id="getAllList" parameterType="idto">
		select * from ipgo order by num
	</select>
	
	<select id="getData" parameterType="String" resultType="idto">
		select * from ipgo where num=#{num}
	</select>
	
	<update id="updateIpgo" parameterType="idto">
		update ipgo set sangpum=#{sangpum}, price=#{price}
		<if test="photoname!='no'">
		,photoname=#{photoname}
		</if>
		where num=#{num}
	</update>
	
	<delete id="deleteIpgo">
		delete from ipgo where num=#{num}
	</delete>
	
</mapper>